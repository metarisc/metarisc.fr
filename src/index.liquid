  {% comment %} <!-- CINQUIEME SECTION -->
  <!-- Carousel -->
  <!-- Un container-fluid -> une row -> une col btn previous -> une col avec les slides du carousel (postsCarousellist.liquid) -> une col btn next -> une row avec les buttons pour changer les slides --> {% endcomment %}
  <section class="fifthSection" id="fifthSection">
    <div class="container-fluid px-5 pb-5">
      <div class="row mb-5 mx-lg-8">
        <div class="col-xl-5">
          <div class="d-flex pb-3 align-items-center gap-2">
            <i class="picto-red-dot"></i>
            <span class="fs-2">Les dernières nouveautés METARISC :</span>
          </div>
        </div>
        <div class="col-xl-6">
          <div class="d-xl-flex d-none justify-content-end align-items-bottom pb-3 gap-2_5">
            {% include "socialslist.liquid" %}
          </div>
        </div>
      </div>

      <div id="carouselExampleIndicators" class="carousel slide mt-4" data-bs-ride="carousel">
        <div class="row">
          <div class="col">
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
              data-bs-slide="prev">
              <span aria-hidden="true">
                <i class="bi bi-arrow-left-square-fill fs-4"></i>
              </span>
              <span class="visually-hidden">Previous</span>
            </button>
          </div>
          <div class="col-9">
            <div class="carousel-inner mx-auto">
              {% assign slideslist = collections.post %}
              {% assign nbSlides = slideslist.length | divided_by: 3 | minus: 1 %}
              {% assign offsetNb = 0 %}
              {% for i in (0..nbSlides) %}
              {% if i == 0 %}
              <div class="carousel-item active justify-content-center">
                <div class="d-md-flex gap-4">
                  {% include "postsCarousellist.liquid" %}
                </div>
              </div>
              {% else %}
              <div class="carousel-item">
                <div class="d-md-flex gap-4">
                  {% include "postsCarousellist.liquid" %}
                </div>
              </div>
              {% endif %}
              {% assign offsetNb = offsetNb | plus: 3 %}
              {% endfor %}
            </div>
          </div>

          <div class="col">
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
              data-bs-slide="next">
              <span aria-hidden="true">
                <i class="bi bi-arrow-right-square-fill fs-4"></i>
              </span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
        <div class="row mt-5">
          <div class="col mt-2">
            <div class="carousel-indicators gap-2">
              {% for i in (0..nbSlides) %}
              {% if i == 0 %}
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{i}}" class="active"
                aria-current="true" aria-label="Slide {{i | plus: 1}}"></button>
              {% else %}
              <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{i}}"
                aria-label="Slide {{i | plus: 1}}"></button>
              {% endif %}
              {% endfor %}

            </div>
          </div>
        </div>

      </div>
    </div>
  </section>
