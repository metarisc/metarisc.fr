{% for soluce in soluces %}

  <div class="col soluce bg-snow">
    <a href="{{soluce.path}}">
      <div class="card bg-transparent w-100 hidden">
        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <i class="bi bi-inboxes-fill"></i>
            </div>
            <div class="col-7">
              <h5 class="card-title text-light text-wrap">{{ soluce.title }}</h5>
            </div>
            <div class="col-3 d-flex justify-content-end">
              <i class="bi bi-arrow-right-short"></i>
            </div>
          </div>
        </div>
        <div class="row gx-0 justify-content-end">
          <img
            src="{{ soluce.img_url | url }}"
            class="card-img card-img-bottom"
            alt="">
        </div>
      </div>
    </a>
  </div>

{% endfor %}